<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.pratyesh.myapplication">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"/>

        <activity android:name=".Demos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".DefaultCodes"
                  android:label="Default (Codes)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.example.pratyesh.myapplication.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity android:name=".DefaultXML"
                  android:label="Default (XML)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.example.pratyesh.myapplication.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity android:name=".ImageOverlayBitmap"
                  android:label="Image Overlay Bitmap (Experimental)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.example.pratyesh.myapplication.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity android:name=".ImageOverlayDrawable"
                  android:label="Image Overlay Drawable (Experimental)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.example.pratyesh.myapplication.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity android:name=".ImageOverlayXML"
                  android:label="Image Overlay XML (Experimental)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.example.pratyesh.myapplication.SAMPLE"/>
            </intent-filter>
        </activity>
    </application>

</manifest>